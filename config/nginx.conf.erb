worker_processes 1;
daemon off; # Run in the foreground

events {
  worker_connections 1024;
}

http {
  # Redirect all logs to Heroku's log stream
  error_log stderr;
  access_log /dev/stdout;
  
  # --- ADD the types explicitly ---
  types {
    text/html     html;
    text/css      css;
    application/javascript js;
  }
  # -----------------------------------

  # This is the default that the buildpack provides
  default_type  application/octet-stream;

  sendfile      on;
  keepalive_timeout 65;

  server {
    # Listen on the port Heroku provides
    listen <%= ENV["PORT"] %>;
    server_name _;
    
    # Set the root directory to your app's root
    root /app;

    # --- NEW FIX: Add a specific location block for the file ---
    # This will match the file after 'index' rewrites the request.
    location = /ni-demo.html {
      # This ensures any request for this exact file gets this type.
      # We clear all other types and set html as the default.
      types { }
      default_type text/html;

      # Force browser to never cache this page
      add_header 'Cache-Control' 'no-cache, no-store, must-revalidate';
      add_header 'Pragma' 'no-cache';
      add_header 'Expires' '0';
    }
    # ---------------------------------------------------------

    location / {
      # Use ni-demo.html as the default file
      index ni-demo.html;
      
      # Turn off directory listing
      autoindex off; 

      # Add cache headers here too, just in case.
      add_header 'Cache-Control' 'no-cache, no-store, must-revalidate';
      add_header 'Pragma' 'no-cache';
      add_header 'Expires' '0';
    }
  }
}

